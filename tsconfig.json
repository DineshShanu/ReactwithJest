{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react-jsx", // Enables the new JSX transform for React 17+
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
